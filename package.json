{
  "name": "roadmap-ui",
  "version": "0.0.6",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "bump-deps": "npx npm-check-updates -u --deep && pnpm install",
    "prepublishOnly": "npm run build"
  },
  "files": ["./packages/gantt/dist", "./packages/types/dist"],
  "exports": {
    "./gantt": {
      "require": "./packages/gantt/dist/index.cjs",
      "import": "./packages/gantt/dist/index.mjs",
      "types": "./packages/gantt/dist/index.d.ts"
    },
    "./types": {
      "require": "./packages/types/dist/index.cjs",
      "import": "./packages/types/dist/index.mjs",
      "types": "./packages/types/dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@types/react": "^18.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3",
    "ultracite": "4.1.4"
  },
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=18"
  }
}
